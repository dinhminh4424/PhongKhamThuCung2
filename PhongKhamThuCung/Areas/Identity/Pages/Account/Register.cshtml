}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="display-4 text-center mb-5 fw-bold text-dark">@ViewData["Title"]</h1>
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Registration Form -->
                        <div class="col-md-6">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <h2 class="text-center mb-4 text-muted">Create a New Account</h2>
                                <hr class="mb-4" />
                                <div asp-validation-summary="All" class="alert alert-warning" role="alert"></div>

                                <!-- Full Name Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.HoVaTen" class="form-label fw-bold text-dark">Full Name</label>
                                    <input asp-for="Input.HoVaTen" class="form-control form-control-lg" autocomplete="name" aria-required="true" />
                                    <span asp-validation-for="Input.HoVaTen" class="text-muted small"></span>
                                </div>
                                <!-- Phone Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.PhoneNumber" class="form-label fw-bold text-dark">PhoneNumber</label>
                                    <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" autocomplete="street-PhoneNumber" aria-required="true" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-muted small"></span>
                                </div>
                                <!-- Address Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.DiaChi" class="form-label fw-bold text-dark">Address</label>
                                    <input asp-for="Input.DiaChi" class="form-control form-control-lg" autocomplete="street-address" aria-required="true" />
                                    <span asp-validation-for="Input.DiaChi" class="text-muted small"></span>
                                </div>

                                <!-- Email Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.Email" class="form-label fw-bold text-dark">Email</label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-muted small"></span>
                                </div>

                                <!-- Password Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.Password" class="form-label fw-bold text-dark">Password</label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-muted small"></span>
                                </div>

                                <!-- Confirm Password Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.ConfirmPassword" class="form-label fw-bold text-dark">Confirm Password</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-muted small"></span>
                                </div>

                                <!-- Role Selection Field -->
                                <div class="form-group mb-4">
                                    <label asp-for="Input.Role" class="form-label fw-bold text-dark">Role</label>
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select form-select-lg">
                                        <option disabled selected>--- Select Role ---</option>
                                    </select>
                                </div>

                                <!-- Register Button -->
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary btn-lg w-100 py-2">Register</button>
                                </div>
                            </form>
                        </div>

                        <!-- Additional Content (Image or Introduction) -->
                        <div class="col-md-6 d-flex align-items-center justify-content-center">
                            <div class="text-center p-4">
                                <img src="https://via.placeholder.com/400" alt="Registration Illustration" class="img-fluid mb-4" />
                                <h3 class="text-dark fw-bold">Welcome to Our Platform</h3>
                                <p class="text-muted">Join our community and enjoy exclusive benefits. Register now to get started!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}