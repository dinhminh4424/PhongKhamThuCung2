@page
@model IndexModel
@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4">@ViewData["Title"]</h3>
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Username Field -->
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label">Tên Đăng Nhập</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>

                        <!-- Phone Number Field -->
                        <div class="form-group mb-4">
                            <label asp-for="Input.PhoneNumber" class="form-label">Số Điện Thoại</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <!-- Save Button -->
                        <div class="form-group text-center">
                            <button id="update-profile-button" type="submit" class="btn btn-primary w-100">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}