@model PhongKhamThuCung.Models.EF.ThuCung
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Thêm Thú Cưng";

}
@section naviHeader {
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin" class="nav-link ">Trang Chủ</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/ThuCung" class="nav-link active"> Thú Cưng</a>
                </li>
            </ul>
}


<form asp-area="Admin" asp-controller="ThuCung" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="card container-fluid ">
        <div class="card-header d-flex ">
            <h2 class="card-title">Chi Tiết @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class=" mb-3">
                <label asp-for="TenThuCung">Tên @ViewData["Title"]</label>
                <input asp-for="TenThuCung" type="text" class="form-control" placeholder="Nhập Tên Thú Cưng">
                <span asp-validation-for="TenThuCung"></span>
            </div>



            <div class=" mb-3">
                <label asp-for="HinhAnh">Chọn Hình Ảnh </label>
                <input name="HinhAnh" type="file" placeholder="Nhập Hình Ảnh" class="form-control" />
                <span asp-validation-for="HinhAnh"></span>
            </div>

            <div class=" mb-3">
                <a class="btn btn-primary" href="/Admin/ThuCung">Thoát</a>
                <button class="btn btn-success">Thêm</button>
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>
</form>

@section Scripts {
            <script>

            </script>
}