@model PhongKhamThuCung.Models.EF.LoaiTinTuc
@{
    ViewData["Title"] = "Thêm Loại Tin Tức";

}
@section naviHeader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin" class="nav-link ">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/LoaiTinTuc" class="nav-link active">Loại Tin Tức</a>
        </li>
    </ul>
}



<form asp-area="Admin" asp-controller="LoaiTinTuc" asp-action="Create" method="post">
    <div class="card container-fluid ">
        <div class="card-header d-flex ">
            <h2 class="card-title">Chi Tiết @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class=" mb-3">
                <label asp-for="TenLoai" >Tên Loại Chi Tiết</label>
                <input asp-for="TenLoai" type="text" class="form-control" placeholder="Nhập Tên Loại Chi Tiết">
                <span asp-validation-for="TenLoai"></span>
            </div>
            <div class=" mb-3">

                <input asp-for="Active" type="checkbox">
                <span>Hoạt động</span>

            </div>
            <div class=" mb-3">
                <a class="btn btn-primary" href="/Admin/LoaiTinTuc">Thoát</a>
                <button class="btn btn-success">Thêm 123</button>
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>
</form>
