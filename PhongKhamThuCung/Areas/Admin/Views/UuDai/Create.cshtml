@model PhongKhamThuCung.Models.EF.UuDai
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Thêm Ưu Đãi";

}
@section naviHeader {
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/UuDai" class="nav-link active"> Ưu Đãi</a>
                </li>
            </ul>
}

<h1>@ViewData["Title"]</h1>


<form asp-area="Admin" asp-controller="UuDai" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="card container-fluid ">
        <div class="card-header d-flex ">
            <h2 class="card-title">Chi Tiết @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class=" mb-3">
                <label asp-for="TenUuDai">Tên @ViewData["Title"]</label>
                <input asp-for="TenUuDai" type="text" class="form-control" placeholder="Nhập Tên Ưu Đãi">
                <span asp-validation-for="TenUuDai"></span>
            </div>
            <div class=" mb-3">
                <label asp-for="MoTa">Mô Tả</label>
                <input asp-for="MoTa" type="text" class="form-control" placeholder="Nhập Mô Tả Ngắn">
                <span asp-validation-for="MoTa"></span>
            </div>
            <div class=" mb-3">
                <label asp-for="GiamGia">Giảm Giá (%)</label>
                <input asp-for="GiamGia" type="number" class="form-control" placeholder="Nhập Giảm Giá %" />
                <span asp-validation-for="GiamGia"></span>
            </div>
            <div class=" mb-3">
                <label asp-for="HinhAnh">Chọn Hình Ảnh </label>
                <input name="HinhAnh" type="file" placeholder="Nhập Hình Ảnh" class="form-control" />
                <span asp-validation-for="HinhAnh"></span>
            </div>
            <div class=" mb-3">
                <input asp-for="Active" type="checkbox">
                <span>Hoạt động</span>

            </div>
            <div class=" mb-3">
                <a class="btn btn-primary" href="/Admin/UuDai">Thoát</a>
                <button class="btn btn-success">Thêm</button>
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>
</form>

@section Scripts {
            <script>

            </script>
}