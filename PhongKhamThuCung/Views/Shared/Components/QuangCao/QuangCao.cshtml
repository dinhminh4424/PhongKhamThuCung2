@model IEnumerable<PhongKhamThuCung.Models.EF.QuangCao>



@if (Model == null || Model.Count() <= 0)
{
    <h2>Ko có Quảng Cáo</h2>
}
else
{




<!-- Carousel Start -->
<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            @if(Model!=null)
            {
                int d = 0;
                foreach (PhongKhamThuCung.Models.EF.QuangCao i in Model)
                {
                    if(d==0)
                    {
                        <div class="carousel-item active">
                            <img class="w-100" style="max-height:100vh" src="@i.HinhAnh" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 69%;">
                                    <h5 class="text-white text-uppercase mb-3 animated slideInDown">@i.MoTa</h5>
                                    <h4 class="display-1 text-white mb-md-4 animated zoomIn">@i.NoiDung</h4>
                                    <a href="appointment.html" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Đặt Lịch</a>
                                    <a href="/Home/ContactUs" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Liên Hệ</a>
                                </div>
                            </div>
                        </div>
                        d++;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="w-100" src="@i.HinhAnh" style="max-height:100vh" alt="Image">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                    <div class="p-3" style="max-width: 69%;">
                                    <h5 class="text-white text-uppercase mb-3 animated slideInDown">@i.MoTa</h5>
                                    <h4 class="display-1 text-white mb-md-4 animated zoomIn ">@i.NoiDung</h4>
                                    <a href="appointment.html" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Đặt Lịch</a>
                                    <a href="/Home/ContactUs" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Liên Hệ</a>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->


}