    <script>
            $(document).ready(function(){
            var owl = $("#carouselLeft123");

            owl.owlCarousel({
                items: 3,       // Hiển thị 3 item cùng lúc
                loop: true,    //  lặp vô hạn
                margin: 10,     // Khoảng cách giữa các item
                nav: false,     //  điều hướng mặc định
                dots: false,    //  dấu chấm
                autoplay: false, // Không tự chạy
                slideBy: 1,     // Mỗi lần di chuyển 1 item
                responsive: {
                0: {
                    items: 1  // Khi màn hình nhỏ hơn 768px, hiển thị 1 item
                },
                768: {
                    items: 3  // Khi màn hình từ 768px trở lên, hiển thị 3 items
                }
                }
            });
            // Nút điều khiển
            $("#prevSlide").click(function(){
                owl.trigger("prev.owl.carousel");
            });
            $("#nextSlide").click(function(){
                owl.trigger("next.owl.carousel");
            });
        });
    </script>


