@model PhongKhamThuCung.Models.EF.DanhGia


@{
    ViewData["Title"] = "Chỉnh sửa bình luận";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center mb-0">Chỉnh sửa bình luận</h2>
        </div>
        <div class="card-body">
            <form asp-action="ChinhSuaBinhLuan" asp-controller="BinhLuan" method="post">
                <input asp-for="MaDanhGia" type="hidden" />
                <div class="form-group mb-3">
                    <label asp-for="NoiDung" class="form-label">Nội dung</label>
                    <textarea asp-for="NoiDung" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CamXuc" class="form-label">Cảm xúc</label>
                    <select asp-for="CamXuc" class="form-control">
                        <option value="Dịch Vụ Tốt">Dịch Vụ Tốt</option>
                        <option value="Dịch Vụ Cực Tốt">Dịch Vụ Cực Tốt</option>
                        <option value="Dịch Vụ Thất Vọng">Dịch Vụ Thất Vọng</option>
                    </select>
                    <span asp-validation-for="CamXuc" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-primary"><i class="fas fa-save"></i> Lưu thay đổi</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-times"></i> Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Thêm Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />