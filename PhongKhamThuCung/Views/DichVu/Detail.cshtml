@model PhongKhamThuCung.Models.EF.DichVu

<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Services</h1>
            <a href="/Home" class="h4 text-white">Trang Chủ</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="/DichVu" class="h4 text-white">Dịch Vụ</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="/DichVu/Detail/@Model.MaDichVu" class="h4 text-white">@Model.TenDichVu</a>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Chi Tiết Dịch Vụ Section -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row g-5">
            <!-- Hình Ảnh Dịch Vụ -->
            <div class="col-lg-6 d-flex justify-content-center align-item-center">
                <div class="card border-0 shadow " style="border-radius: 15px; overflow: hidden;">
                    <img src="@Model.HinhAnh" class="card-img-top" alt="@Model.TenDichVu" style="height: 100%; object-fit: cover;">
                </div>
            </div>
            <!-- Thông Tin Dịch Vụ -->
            <div class="col-lg-6 p-3">
                <div class="card border-0 shadow h-100" style="border-radius: 15px;">
                    <div class="card-body">
                        <h2 class="card-title fw-bold">@Model.TenDichVu</h2>
                        <p class="card-text text-muted">@Model.MoTa</p>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <span class="fw-bold">Giá Dịch Vụ:</span>
                                <span class="text-primary fw-bold">@Model.GiaDichVu?.ToString("N0") VNĐ</span>
                            </li>
                            <li class="mb-3">
                                <span class="fw-bold">Trạng Thái:</span>
                                <span class="badge bg-@(Model.Active ? "success" : "danger")">
                                    @(Model.Active ? "Đang hoạt động" : "Ngừng hoạt động")
                                </span>
                            </li>
                        </ul>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="/DichVu" class="btn btn-outline-primary">Quay Lại</a>
                            <a href="/DatLich" class="btn btn-primary">Đặt Lịch Ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>