@model PhongKhamThuCung.Models.EF.TinTuc

@{
    ViewData["Title"] = Model.TieuDe;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Tiêu đề -->
            <h1 class="display-4">@Model.TieuDe</h1>
            <!-- Ngày đăng -->
            <p class="text-muted mb-4">
                <i class="fas fa-calendar-alt"></i> Ngày đăng: @Model.NgayDang?.ToString("dd/MM/yyyy")
            </p>

            <!-- Hình ảnh -->
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <div class="mb-4">
                    <img src="@Model.HinhAnh" alt="@Model.TieuDe" class="img-fluid rounded" />
                </div>
            }

            <!-- Mô tả ngắn -->
            <div class="mb-4">
                <h3 class="h4">Mô tả ngắn</h3>
                <p class="lead">@Model.MoTaNgan</p>
            </div>

            <!-- Nội dung chi tiết -->
            <div class="mb-4">
                <h3 class="h4">Nội dung chi tiết</h3>
                <div class="content">
                    @Html.Raw(Model.NoiDung)
                </div>
            </div>

            <!-- Nút quay lại -->
            <div class="mt-4">
                <a asp-controller="BaiViet" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>