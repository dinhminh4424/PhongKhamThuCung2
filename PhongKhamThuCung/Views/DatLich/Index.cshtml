
@model PhongKhamThuCung.Models.EF.LichHen

@*

<!-- Hero Start -->
<div class="container-fluid bg-primary py-5 hero-header mb-5">
    <div class="row py-3">
        <div class="col-12 text-center">
            <h1 class="display-3 text-white animated zoomIn">Đặt Lịch</h1>
            <a href="/Home" class="h4 text-white">Trang Chủ</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="/DatLich" class="h4 text-white">Đặt Lịch</a>
        </div>
    </div>
</div>
<!-- Hero End -->
@if (User.Identity.IsAuthenticated)
{
    <!-- Appointment Start -->
    <div class="container-fluid bg-appointment mb-5 wow fadeInUp" data-wow-delay="0.1s" style="margin-top: 90px; ">
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="display-5 text-white mb-4">Chúng Tôi Là Phòng Khám Nha Khoa Được Chứng Nhận Và Đạt Giải Thưởng</h1>
                        <p class="text-white mb-0">Với đội ngũ bác sĩ chuyên nghiệp và trang thiết bị hiện đại, chúng tôi cam kết mang lại dịch vụ tốt nhất cho bạn. Hãy đặt lịch ngay hôm nay để nhận được sự chăm sóc tận tình từ chúng tôi.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="appointment-form h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Đặt Lịch Hẹn</h1>
                        <form>
                            <div class="row g-3">
                                <div class="col-12 col-sm-6">
                                    <select class="form-select bg-light border-0" style="height: 55px;">
                                        <option selected>Chọn Dịch Vụ</option>
                                        <option value="1">Dịch Vụ 1</option>
                                        <option value="2">Dịch Vụ 2</option>
                                        <option value="3">Dịch Vụ 3</option>
                                    </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <select class="form-select bg-light border-0" style="height: 55px;">
                                        <option selected>Chọn Bác Sĩ</option>
                                        <option value="1">Bác Sĩ 1</option>
                                        <option value="2">Bác Sĩ 2</option>
                                        <option value="3">Bác Sĩ 3</option>
                                    </select>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" class="form-control bg-light border-0" placeholder="Tên Của Bạn" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="email" class="form-control bg-light border-0" placeholder="Email Của Bạn" style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        <input type="text"
                                               class="form-control bg-light border-0 datetimepicker-input"
                                               placeholder="Ngày Hẹn" data-target="#date1" data-toggle="datetimepicker" style="height: 55px;">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="time" id="time1" data-target-input="nearest">
                                        <input type="text"
                                               class="form-control bg-light border-0 datetimepicker-input"
                                               placeholder="Giờ Hẹn" data-target="#time1" data-toggle="datetimepicker" style="height: 55px;">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-dark w-100 py-3" type="submit">Đặt Lịch Hẹn</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Appointment End -->
}
else
{
    <div class="container text-center my-5">
        <h2 class="text-dark mb-4">Bạn Cần Đăng Nhập Để Đặt Lịch</h2>
        <a class="btn btn-primary btn-lg" id="login" asp-area="Identity" asp-page="/Account/Login">Đăng Nhập</a>
    </div>
}

